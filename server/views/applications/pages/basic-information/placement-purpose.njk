{% extends "../layout.njk" %}

{% block questions %}

  <h1 class="govuk-heading-l">What is the purpose of the Approved Premises (AP) placement?</h1>

  {% set otherReason %}
  {{
    applyInput(
      {
        fieldName: "otherReason",
        type: "text",
        label: {
          text: "Please specify"
        }
      },
      fetchContext()
    )
  }}
  {% endset %}

  {{
    applyCheckboxes(
      {
        fieldName: "placementPurposes",
        hint: {
          text: "Select all that apply."
        },
        items: [
          {
            value: "publicProtection",
            text: "Public protection"
          },
          {
            value: "resettlement",
            text: "Support resettlement into the community"
          },
          {
            value: "drugAlcoholSupport",
            text: "Enhanced drug or alcohol support"
          },
          {
            value: "risktoSelff",
            text: "Support the management of risk to self"
          },
          {
            divider: "or"
          },
          {
            value: "otherReason",
            text: "Other",
            conditional: {
              html: otherReason
            }
          }
        ]
      },
      fetchContext()
    )
  }}

{% endblock %}
