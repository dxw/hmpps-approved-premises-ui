{% from "govuk/components/details/macro.njk" import govukDetails %}
{% extends "../layout.njk" %}

{% block questions %}

  <h1 class="govuk-heading-l">
    {{ page.title }}
  </h1>

  {{ formPageRadios(
      {
        fieldset: {
          legend: {
            text: page.question,
            classes: "govuk-fieldset__legend--m"
          }
        },
        items: convertKeyValuePairToRadioItems(page.riskLevels, page.riskLevel),
        fieldName: "riskLevel"
      },
      fetchContext()
    )
  }}

{% endblock %}
