{% extends "../layout.njk" %}

{% block questions %}

  <h1 class="govuk-heading-l">{{page.title}}</h1>

  {% set fnInformed %}
  {{ formPageDateInput({
        fieldName: 'date',
        classes: "govuk-!-width-two-thirds",
        value: page.date,
        errorMessage: errors.date,
        label: {
          text: page.subquestion
        }
      }) }}
  {% endset %}

  {{ formPageRadios({
      fieldName: 'response',
      fieldset: {
        legend: {
          text: page.question,
          classes: "govuk-fieldset__legend--m"
        }
      },
      hint: {
        text: page.hint
      },
      items: [
        {
          value: "yes",
          text: "Yes",
          conditional: {
            html: fnInformed
          }
        },
        {
          value: "no",
          text: "No"
        }
      ]
    }) }}

{% endblock %}
