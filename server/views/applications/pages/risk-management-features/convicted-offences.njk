{% extends "../layout.njk" %}

{% block questions %}

  <h1 class="govuk-heading-l">{{page.title}}</h1>

  <p class="govuk-body">{{page.furtherDetails}}</p>

  <ul class="govuk-list govuk-list--bullet">
    {% for offence in page.offences %}
      <li>{{offence}}</li>
    {% endfor %}
  </ul>

  {{
      formPageRadios(
        {
          fieldName: "response",
          items: [
            {
              value: "yes",
              text: "Yes"
            },
            {
              value: "no",
              text: "No"
            }
          ]
        },
        fetchContext()
      )
    }}

{% endblock %}
