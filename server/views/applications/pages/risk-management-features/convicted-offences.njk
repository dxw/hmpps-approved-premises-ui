{% from "govuk/components/radios/macro.njk" import govukRadios %}

{% extends "../layout.njk" %}

{% block questions %}

    <h1 class="govuk-heading-l">{{page.title}}</h1>

    <p class="govuk-body">{{page.furtherDetails}}</p>

    <ul class="govuk-list govuk-list--bullet">
        {% for offence in page.offences %}
            <li>{{offence}}</li>
        {% endfor %}
    </ul>

    {{ govukRadios({
        idPrefix: "response",
        name: "response",
        items: [
            {
            value: "yes",
            text: "Yes"
            },
            {
            value: "no",
            text: "No"
            }
        ]
    }) }}

{% endblock %}
