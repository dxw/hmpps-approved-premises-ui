{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}

{% extends "../layout.njk" %}

{% block questions %}

  <h1 class="govuk-heading-l">{{page.title}}</h1>

  <p class="govuk-body">This information will be used to match them to a bed in an Approved Premises</p>

  {{ govukCheckboxes({
        id: "offenceConvictions",
        name: "offenceConvictions",
        errorMessage: errors.offenceConvictions, 
        values: offenceConvictions,
        hint: {
          text: "You can select more than one option"
        },
        items: page.items()
      }) }}

{% endblock %}
