{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "../../../partials/layout.njk" %}

{% set pageTitle = applicationName + " - " + page.title %}
{% set mainClasses = "app-container govuk-body" %}

{% set nomsNumber = page.application.person.nomsNumber if page.application.person.nomsNumber else 
  "" %}

{% block content %}
  {{ govukBackLink({
      text: "Back",
      href: paths.applications.show({ id: page.application.id })
  }) }}

  <div class="govuk-grid-row">
    <div class="govuk-width-container">
      <h1 class="govuk-heading-xl">
        {{ page.title }}
      </h1>

      {{
        govukSummaryList({
          card: {
            title: {
              text: "Person Details",
              headingLevel: "3"
            },
            attributes: {
              'data-cy-section': "person-details"
            }
          },
          rows: ([
            {
              key: {
                text: "Name"
              },
              value: {
                text: page.application.person.name
              }
            },
            {
              key: {
                text: "CRN"
              },
              value: {
                text: page.application.person.crn
              }
            },
            {
              key: {
                text: "Date of Birth"
              },
              value: {
                text: formatDate(page.application.person.dateOfBirth, { format: 'short' })
              }
            },
            {
              key: {
                text: "NOMS Number"
              },
              value: {
                text: nomsNumber
              }
            },
            {
              key: {
                text: "Nationality"
              },
              value: {
                text: page.application.person.nationality
              }
            },
            {
              key: {
                text: "Religion or Belief"
              },
              value: {
                text: page.application.person.religionOrBelief
              }
            },
            {
              key: {
                text: "Sex"
              },
              value: {
                text: page.application.person.sex
              }
            },
            {
              key: {
                text: "Gender Identity"
              },
              value: {
                text: page.application.person.genderIdentity
              }
            },
            {
              key: {
                text: "Status"
              },
              value: {
                html: statusTag(page.application.person.status)
              }
            },
            {
              key: {
                text: "Prison"
              },
              value: {
                text: page.application.person.prisonName
              }
            }
          ])
        })
      }}

      {% for section in summaryListSections(page.application) %}
        <h2 class="govuk-heading-l">{{ section.title }}</h2>
        {% for task in section.tasks %}
          {{
            govukSummaryList(task)
          }}
        {% endfor %}
      {% endfor %}

      <form action="{{ paths.applications.pages.update({ id: applicationId, task: task, page: page.name }) }}?_method=PUT" method="post">
        <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>

        <input type="hidden" name="reviewed" value="1"/>

        {{ govukButton({
            text: "Continue"
        }) }}
      </form>

    </div>
  </div>
{% endblock %}
