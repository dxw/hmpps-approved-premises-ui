{% from "govuk/components/summary-list/macro.njk" import govukSummaryList %}
{% from "govuk/components/back-link/macro.njk" import govukBackLink %}
{% from "govuk/components/button/macro.njk" import govukButton %}

{% extends "../../../partials/layout.njk" %}

{% set pageTitle = applicationName + " - " + page.title %}
{% set mainClasses = "app-container govuk-body" %}

{% block content %}

    {{ govukBackLink({
      text: "Back",
      href: paths.assessments.show({ id: page.assessment.id })
    }) }}

    <div class="govuk-grid-row">
        <div class="govuk-width-container">
            <h1 class="govuk-heading-xl">
                {{ page.title }}
            </h1>

            {% for section in AssessmentUtils.assessmentSections(page.assessment) %}
                {% for task in section.tasks %}
                    <div class="main-box" data-cy-check-your-answers-section="{{ task.id }}">
                        <h3 class="box-title govuk-heading-m">
                            {{ task.title }}
                        </h3>
                        <div class="box-content">
                            {{
                                govukSummaryList({
                                rows: task.rows
                                })
                            }}
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}

            <form action="{{ paths.assessments.pages.update({ id: assessmentId, task: task, page: page.name }) }}?_method=PUT" method="post">
                <input type="hidden" name="_csrf" value="{{ csrfToken }}"/>

                <input type="hidden" name="reviewed" value="1"/>

                {{ govukButton({
                    text: "Continue"
                }) }}
            </form>

        </div>
    </div>
{% endblock %}
